---
import Header from "../components/Header.jsx";
import FooterSimple from "../layouts/Footer.astro";
import "animate.css";
import RelojSimple from "../components/Reloj.jsx";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/icons8-logo.svg" />
		<meta name="viewport" content="width=device-width" />
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
			integrity="sha512-..."
			crossorigin="anonymous"
		/>
		<title>CV David</title>
	</head>
	<Header client:load></Header>
	<body>
		<div class="back-img">
			<div class="container animate__animated animate__fadeIn">
				<h1 class="title2">
					<a class="animate__animated animate__fadeIn">Reloj</a>
				</h1>
				<RelojSimple client:load></RelojSimple>
			</div>
		</div>
	</body>
	<FooterSimple />

<style>
	.title {
            font-size: 50px;
            text-align: center;
            margin-top: 80px;
        }

        .animate__animated.animate__fadeIn {
            --animate-duration: 2.5s;
        }

        /* Sobre mi */

        .back-img {
            position: relative;
            width: 100%;
            height: 100vh;
            overflow: auto;
            background-position: center;
            justify-content: center;
        }

        .back-img::before {
            content: "";
            background: linear-gradient(-75deg, #54ee4f, #e368f3, #4fe970);
            animation: gradient 15s ease infinite;
            background-size: cover;
            background-position: center;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }
        @keyframes gradient {
            0% {
                background-position: 0% 50%;
            }
            50% {
                background-position: 100% 50%;
            }
            100% {
                background-position: 0% 50%;
            }
        }

        .container {
            max-width: 1500px;
            margin: 0 auto;
            padding: 70px;
            justify-content: center;
            align-items: center;
        }

        .title2 {
            font-family: system-ui, -apple-system, BlinkMacSystemFont,
                "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans",
                "Helvetica Neue", sans-serif;
            text-align: center;
            color: #000000;
            font-size: 40px;
        }

        .content {
            display: flex;
            justify-content: space-between;
            margin-top: 50px;
            text-align: justify;
        }
        .left {
            flex-basis: 65%;
            background-color: rgba(255, 255, 255, 0.7);
            padding: 20px;
            line-height: 1.7;
            display: flex;
            justify-content: center; /* Centra horizontalmente el contenido */
            align-items: center; /* Centra verticalmente el contenido */
            text-align: justify; /* Justifica el texto */
        }

        .centered-text {
            font-family: system-ui, -apple-system, BlinkMacSystemFont,
                "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans",
                "Helvetica Neue", sans-serif;
            font-size: 25px;
        }

        .right {
            flex-basis: 35%;
            background-color: rgba(255, 255, 255, 0.7);
            padding: 20px;
            display: flex;
            justify-content: center; /* Centra horizontalmente el contenido */
            align-items: center; /* Centra verticalmente el contenido */
        }

        img {
            display: block;
            width: 45%;
            height: auto;
        }

        /* Formación */
        .cuadro {
            flex-basis: 100%;
            background-color: rgba(255, 255, 255, 0.7);
            padding: 20px;
            display: flex;
            justify-content: center; /* Centra horizontalmente el contenido */
            align-items: center; /* Centra verticalmente el contenido */
        }

        .tabla {
            border-collapse: collapse; /* Oculta las líneas de la cuadrícula */
            width: 100%;
            padding: 0px;
            line-height: 1.7;
        }

        .tabla td {
            padding: 3px;
            text-align: center;
        }

        .tabla td h1 {
            font-family: system-ui, -apple-system, BlinkMacSystemFont,
                "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans",
                "Helvetica Neue", sans-serif;
            font-size: 25px;
            font-weight: bold;
            color: black;
        }

        .tabla td h2 {
            font-family: system-ui, -apple-system, BlinkMacSystemFont,
                "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans",
                "Helvetica Neue", sans-serif;
            font-size: 20px;
            color: black;
        }

        .tabla td h3 {
            font-family: system-ui, -apple-system, BlinkMacSystemFont,
                "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans",
                "Helvetica Neue", sans-serif;
            font-size: 18px;
            color: rgb(43, 43, 43);
        }

        .tabla td h4 {
            font-family: system-ui, -apple-system, BlinkMacSystemFont,
                "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans",
                "Helvetica Neue", sans-serif;
            font-size: 20px;
            color: black;
        }

        .tabla img {
            display: block;
            width: 100px;
            height: auto;
            margin: 0 auto;
        }
	.reloj {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-size: 70px;
    font-weight: bold;
    text-align: center;
    margin-top: 15px;
    color: #000000;
    /* Color inicial de las letras */
    justify-content: center;
    align-items: center;
}

span {
    display: inline-block;
    padding: 0 10px;
}

.puntos {
    padding: 0;
}

.cuadro2 {
    flex-basis: 100%;
    background-color: rgba(255, 255, 255, 0.7);
    padding-bottom: 30px;
    padding-top: 30px;
    padding-left: 30px;
    padding-right: 30px;
    justify-content: center;
    /* Centra horizontalmente el contenido */
    align-items: center;
    /* Centra verticalmente el contenido */
}


button {
    display: block;
    margin: 20px auto;
    padding: 10px 20px;
    font-size: 18px;
    background-color: #57ff7c;
    color: #ffffff;
    border: none;
    cursor: pointer;
}

button:hover {
    background-color: #000000;
    animation: pulse 1s infinite;
}

@keyframes pulse {
    0% {
        transform: scale(1);
    }

    50% {
        transform: scale(1.2);
    }

    100% {
        transform: scale(1);
    }
}
</style>
</html>
